@model IEnumerable<Todo_list.Models.Note>

@{
    ViewBag.Title = "Index";
}

<h2>Your notes</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CreatedAt)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Message)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CreatedAt)
        </td>
        <td>
            @Html.TextAreaFor(modelItem => item.Message, 5, 120, new { @class = "notes", disabled = "disabled" })
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Status)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { createdAt = item.CreatedAt }) |
            @Html.ActionLink("Delete", "Delete", new { createdAt = item.CreatedAt })
        </td>
    </tr>
}
</table>
